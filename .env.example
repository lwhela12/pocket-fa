# Database connection string
# For production, use your hosted PostgreSQL URL (Supabase, Railway, Neon, etc.)
DATABASE_URL="postgresql://<db_user>:<db_password>@localhost:5432/pocket_fa?schema=public"

# JWT Secret - CRITICAL: Generate a secure random secret for production
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-secure-jwt-secret-here-minimum-256-bits"

# Gemini API Key - Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# Upstash Redis - For rate limiting
# These are automatically set by Vercel when you add Upstash Redis from Storage tab
# Get from Vercel Dashboard > Storage > Create Database > Upstash Redis
UPSTASH_KV_REST_API_URL="your-upstash-url-here"
UPSTASH_KV_REST_API_TOKEN="your-upstash-token-here"
UPSTASH_KV_REST_API_READ_ONLY_TOKEN="your-upstash-readonly-token-here"

# AWS S3 Configuration - For file storage
# Create an S3 bucket and IAM user with S3 read/write permissions
# Add these to Vercel environment variables
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="your-bucket-name-here"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# Resend Email Service - For email verification
# Sign up at https://resend.com and create an API key
# Free tier: 3,000 emails/month (perfect for beta)
RESEND_API_KEY="re_your_api_key_here"

# Application URL - For email verification links
# Development: http://localhost:3000
# Production: https://your-app.vercel.app
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Set to "true" to seed database on build (development only)
SEED_DATABASE="false"
